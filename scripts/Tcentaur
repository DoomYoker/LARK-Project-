if( $merlin == 0 )
then tput bold; echo "Centaur: "; tput srg0; "Sorry, but I can't help you at the moment. Please speak Merlin before coming to see me."
else 
tput bold; echo "Centaur: "; tput srg0; "Merlin told me you needed some assistance. I'll help you get past those undead vermin." 
centaur="1"

fi

export centaur
